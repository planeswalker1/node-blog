html
  box-sizing border-box

*,
*:before,
*:after
  box-sizing inherit

body
  font-family sans-serif
  margin 0


img
  width 100%

label
  color rgba(0,0,0,.87)
  display block
  font-size .92857143em
  font-weight 700
  margin 0 0 .28571429rem 0
  text-transform none

input
  -webkit-appearance none
  appearance none
  background #fff
  border 1px solid rgba(34,36,38,.15)
  border-radius .28571429rem
  -webkit-box-shadow 0 0 0 0 transparent inset
  box-shadow 0 0 0 0 transparent inset
  color rgba(0,0,0,.87)
  font-size 1em
  line-height 1.21428571em
  margin 0
  outline 0
  padding .67857143em 1em
  -webkit-transition color .1s ease,border-color .1s ease
  transition color .1s ease,border-color .1s ease
  vertical-align top
  width 100%

input:focus
  background #fff
  border-color #85b7d9
  border-radius .28571429rem
  -webkit-box-shadow 0 0 0 0 rgba(34,36,38,.35) inset
  box-shadow 0 0 0 0 rgba(34,36,38,.35) inset
  color rgba(0,0,0,.95)

textarea
  -webkit-appearance none
  appearance none
  background #fff
  border 1px solid rgba(34,36,38,.15)
  border-radius .28571429rem
  -webkit-box-shadow 0 0 0 0 transparent inset
  box-shadow 0 0 0 0 transparent inset
  color rgba(0,0,0,.87)
  font-family sans-serif
  font-size 1em
  height 12em
  line-height 1.2857
  margin 0
  min-height 8em
  max-height 24em
  outline 0
  padding .78571429em 1em
  resize vertical
  -webkit-transition color .1s ease,border-color .1s ease
  transition color .1s ease,border-color .1s ease
  vertical-align top
  width 100%

textarea:focus
  -webkit-appearance none
  appearance none
  background #fff
  border-color #85b7d9
  border-radius .28571429rem
  color rgba(0,0,0,.95)
  -webkit-box-shadow 0 0 0 0 rgba(34,36,38,.35) inset
  box-shadow 0 0 0 0 rgba(34,36,38,.35) inset
