.big
  font-size 2em

.blog
  padding 10px 10px 0 10px
  margin 10px
  border 1px solid rgba(34,36,38,.15)

.blog__item
  height 300px
  display flex
  border-bottom 1px solid rgba(34,36,38,.15)

.blog__item:last-of-type
  border none

.item__img,
.item__content
  flex 1

.img--blog
  width 100%
  height 300px
  object-fit contain

.item__content
  padding-left 30px

.form
  border 1px solid rgba(34,36,38,.15)
  border-radius .28571429rem
  padding 1em

.form--inline
  display inline-block

.form-group
  margin 0 0 1em

.btn
  background none
  border-radius .28571429em
  cursor pointer
  display inline-block
  font-size 0.9em
  line-height 1em
  margin 0 .25em 0 0
  min-height 1em
  outline 0
  padding 11px 20px
  text-align center
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  vertical-align baseline

.btn:hover
  background #e0e1e2

.btn--black
  color #1b1c1d
  border 1px solid rgba(34,36,38,.15)
  -webkit-box-shadow 0 0 0 1px transparent inset, 0 0 0 0 rgba(34,36,38,.15) inset
  box-shadow 0 0 0 1px transparent inset, 0 0 0 0 rgba(34,36,38,.15) inset

.btn--red
  color #db2828
  border 1px solid #db2828
  -webkit-box-shadow 0 0 0 1px transparent inset, 0 0 0 0 #db2828 inset
  box-shadow 0 0 0 1px transparent inset, 0 0 0 0 #db2828 inset

.btn--orange
  color #f2711c
  border 1px solid #f2711c
  -webkit-box-shadow 0 0 0 1px transparent inset, 0 0 0 0 #f2711c inset
  box-shadow 0 0 0 1px transparent inset, 0 0 0 0 #f2711c inset
