<% let title = 'Edit ' + blog.title + ' Â· Dan\'s Blog'; %>
  <% include partials/header.ejs %>

    <div class="container__contain">
      <h1>Edit <%= blog.title %></h1>
      <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="title">Title: </label>
          <input id="title" type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="form-group">
          <label for="image">Image Source: </label>
          <input id="image" type="text" name="blog[src]" value="<%= blog.src %>" required>
        </div>
        <div class="form-group">
          <label for="alt">Image description: </label>
          <input id="alt" type="text" name="blog[alt]" value="<%= blog.alt %>" required>
        </div>
        <div class="form-group">
          <label for="content">Blog Content: </label>
          <textarea id="content" name="blog[body]" cols="30" rows="10" required><%= blog.body %></textarea>
        </div>
        <button class="btn btn--black" type="submit">Submit</button>
      </form>
    </div>

    <% include partials/footer.ejs %>